

<div class="testimonial-slider">
{% for block in section.blocks %}
    <div class="testimonial-card">
      <div class="testimonial-icon">{% render 'icon-quote' %}</div>
      <div class="testimonial-text">{{block.settings.text}}</div>
      <div class="testimonial-image"><img src="{{block.settings.image | img_url: '60x60'}}" width='60' height='60' alt="user image" class="user-img" loading="lazy"></div>
      <div class="testimonial-name">{{ block.settings.name }}</div>
    </div>
{% endfor %}
</div>

{% schema %}
{
    "name": "Testimonial-Slider",
    "settings": [],
    "blocks": [
        {
            "type": "testimonial",
            "name": "testimonial",
            "settings": [
                {
                    "id": "text",
                    "label": "Text",
                    "type": "richtext"
                },
                {
                    "id": "image",
                    "label": "Image",
                    "type": "image_picker"
                },
                {
                    "id": "name",
                    "label": "Name",
                    "type": "text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Testimonial slider"
        }
    ]
}

{% endschema %}